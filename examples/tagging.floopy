subroutine fill(out, a, n)
  implicit none

  real*8 a, out(n)
  integer n

!$loopy begin tagged: init
  do i = 1, n
    out(i) = a
  end do
!$loopy end tagged: init
  do i = 1, n
    out(i) = out(i) * 2
  end do
end

